@model SalesEntryFormModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Sales Entry Form</h1>
    <br />
    <br />
    <hr />
    @using (Html.BeginForm("Index", "Sales", FormMethod.Post))
    {
        <table>
            <tr>
                <td>
                    Salesman
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.EditorFor(model => model.SalesmanLogin)
                </td>
                <td width="40%">
                    &nbsp;
                </td>
                <td>
                    Current Date
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.EditorFor(model => model.CurrentDate)
                </td>
                <td>
                    @Html.HiddenFor(model => model.SalesPersonId)
                </td>
            </tr>
        </table>

        <br />
        <br />

        <table cellpadding="0" cellspacing="0">
            <tr>
                <td>Product: </td>
                <td>&nbsp;</td>
                <td>
                    @Html.DropDownListFor(m => m.ProductId, Model.ProductList, "Please Select")
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>Amount: </td>
                <td>&nbsp;</td>
                <td>
                    @Html.TextBoxFor(m => m.Amount)
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>Price: </td>
                <td>&nbsp;</td>
                <td align="right">
                    @Html.ValueFor(m => m.Price)
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td></td>
                <td>&nbsp;</td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }
    <hr />
</div>
